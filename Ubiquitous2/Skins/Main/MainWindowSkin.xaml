    <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <DockPanel d:DesignHeight="300" d:DesignWidth="500"> 
                        <Grid Background="#FF09210A">
                            <Border Padding="5" VerticalAlignment="Top" HorizontalAlignment="Stretch" Panel.ZIndex="1" Visibility="{Binding IsOverlayVisible, Converter={StaticResource boolToVisibilityConverter}}" Background="#B2000000">
                                <TextBlock Background="Transparent" Foreground="White">
                                    <Hyperlink Style="{StaticResource ResourceKey=OverlayHyperlink}" Command="{Binding ShowSettings}">
                                        <Image Source="/Ubiquitous2;component/Resources/gear.png" Width="16" Height="16" Margin="0,0,0,-3"/> Settings
                                    </Hyperlink>
                                </TextBlock>
                            </Border>
                            <View:ChatBoxView Margin="3,0" RenderTransformOrigin="1,0" OverridesDefaultStyle="True" Padding="0"/>
                        </Grid>
                        <Border Padding="5" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Panel.ZIndex="1" Visibility="{Binding IsOverlayVisible, Converter={StaticResource boolToVisibilityConverter}}" Background="#B2000000">
                            <DockPanel VerticalAlignment="Bottom" Background="Transparent" Margin="0,0,0,24">                                                                
                                <Label Foreground="#FFFFF300">Reply:</Label>
                                <Border CornerRadius="7" Background="#FF2C2C2C" Padding="6,0" Margin="0,2,9,-22">                                    
                                    <TextBox Margin="0" Background="#FF2C2C2C" Foreground="#FFBDBDBD" BorderThickness="0"/>
                                </Border>
                            </DockPanel>
                        </Border>

                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="ResizeMode" Value="CanResizeWithGrip">
                <Setter Property="Template" Value="{StaticResource WindowTemplateKey}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>