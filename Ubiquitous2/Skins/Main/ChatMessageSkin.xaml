<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ub="clr-namespace:UB.View"
                    >

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <Style x:Key="ChatMessageTemplate" TargetType="{x:Type UserControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type UserControl}">
                    <DockPanel>
                        <Border CornerRadius="10" Margin="1,0,1,5" BorderThickness="0,0,1,1" Padding="3,0,3,8">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="200,165.008" MappingMode="Absolute" StartPoint="80,0">
                                    <GradientStop Color="#FF4D4D4D" Offset="1"/>
                                    <GradientStop Color="#FF383838" Offset="0.123"/>
                                    <GradientStop Color="#FF515151" Offset="0.486"/>
                                    <GradientStop Color="#FF3C3C3C" Offset="0.843"/>
                                    <GradientStop Color="#FF424242" Offset="0.012"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="131*"/>
                                    <ColumnDefinition Width="132*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="18"/>
                                    <RowDefinition MinHeight="18"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Stretch" Width="Auto">
				                    <Image Stretch="Fill" Margin ="0,0,0,2" Width="12" Height="12" Source="{Binding Message.ImageSource, Mode=OneTime}" VerticalAlignment="Top" HorizontalAlignment="Left">
					                    <Image.Effect>
						                    <DropShadowEffect BlurRadius="2" Opacity="0.2" ShadowDepth="2"/>
					                    </Image.Effect>
				                    </Image>
                                    <TextBox FontSize="11" Text="{Binding Message.Channel,Mode=OneTime}" Margin="0,0,0,2" Foreground="#FFFFC042" HorizontalAlignment="Left"/>
				                    <TextBox FontSize="11" Text="{Binding Message.FromUserName,Mode=OneTime}" Margin="0,0,0,2" Foreground="#FFFFC042" HorizontalAlignment="Left"/>
                                </TextBlock>
                                <Border Grid.ColumnSpan="2" Grid.Row="1" CornerRadius="10" Background="#FF303030" BorderThickness="0" Padding="3,5,3,3" Margin="0,0,0,-8">
                                    <TextBox TextAlignment="Justify" 
                             Text="{Binding Message.Text,Mode=OneTime}" 
                             FontSize="14" 
                             Foreground="#FFCDCDCD"/>
                                </Border>
                                <TextBox Text="{Binding Message.TimeStamp,Mode=OneTime}" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         FontSize="11" 
                         Foreground="#FFD69B33" 
                         TextAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>